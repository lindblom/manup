doctype 5
html
  head
    title = content_for?(:title) ? yield(:title) : "ManUp!"
    - if content_for?(:description)
      meta name="description" content="#{yield :description}"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  body
    .container
      = yield
